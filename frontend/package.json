{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "typecheck": "tsc --noEmit",
    "check": "npm run typecheck && npm run lint",
    "check:watch": "tsc --noEmit --watch",
    "quality-gate": "npx tsx scripts/quality-gate.ts",
    "pre-commit": "npm run quality-gate",
    "test": "NODE_OPTIONS='--max-old-space-size=4096' vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest --run app/",
    "test:unit:watch": "vitest app/",
    "test:integration": "vitest --run tests/integration/",
    "test:services": "vitest --run tests/services/",
    "test:utils": "vitest --run utils/",
    "test:api": "vitest --run tests/api/",
    "test:fast": "npx tsx scripts/run-tests-fast.ts",
    "test:fast-old": "vitest --run app/ utils/",
    "test:slow": "vitest --run tests/",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:stable": "playwright test tests/e2e/*-stable.spec.ts",
    "test:e2e:debug": "playwright test --headed --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:retry": "playwright test --retries=3",
    "test:e2e:single": "playwright test --workers=1",
    "test:e2e:workspace": "playwright test tests/e2e/workspace-ui-stable.spec.ts",
    "test:e2e:files": "playwright test tests/e2e/file-operations-stable.spec.ts",
    "analyze": "ANALYZE=true npm run build",
    "analyze:bundle": "npm run analyze && npx webpack-bundle-analyzer .next/analyze/client.js",
    "performance": "npm run build && npm run start",
    "lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html",
    "pre-commit-full": "npm run check && npm run test",
    "prepare": "husky"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.2",
    "@headlessui/tailwindcss": "^0.2.2",
    "@heroicons/react": "^2.2.0",
    "lucide-react": "^0.508.0",
    "next": "15.3.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sonner": "^2.0.3",
    "zustand": "^5.0.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@hookform/resolvers": "^5.0.1",
    "@playwright/test": "^1.53.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/tiny-segmenter": "^0.2.0",
    "@vitejs/plugin-react": "^4.5.0",
    "@vitest/coverage-v8": "^3.1.4",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.0",
    "msw": "^2.8.6",
    "playwright": "^1.52.0",
    "react-hook-form": "^7.56.4",
    "tailwindcss": "^4",
    "tiny-segmenter": "^0.2.0",
    "typescript": "^5",
    "vitest": "^3.1.4",
    "yup": "^1.6.1"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
